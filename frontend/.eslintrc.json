{
    "settings": {
        "react": {
            "version": "latest"
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jest/globals": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest",
        "prettier"
    ],
    "rules": {
        "no-console": "warn",
        "no-eval": "error",
        "prettier/prettier": ["error"]
    }
}
